<% title t(:'users.change_password_title') %>

<div class="col-md-6 col-md-offset-3 text-center top-buffer">
  <div class="panel panel-info ">
    <div class="panel-heading">
      <h2 class="panel-title"><%= t(:'users.change_password_title') %></h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12" >
          <%= simple_form_for @user, url: reset_password_path(@token), method: :patch do |f| %>
              <%= render 'shared/errors', object: @user %>

              <div class="form-group">
                <%= f.input :password, label: false, placeholder: t(:'users.password'), class: 'form-control', required: true %>
              </div>

              <div class="form-group">
                <%= f.input :password_confirmation, label: false, placeholder: t(:'users.password_confirmation'), class: 'form-control', required: true %>
              </div>

              <%= f.submit 'Set password', class: 'btn btn-primary btn-lg' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>





