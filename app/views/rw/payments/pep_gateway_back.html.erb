<% title(t(:'payments.transaction_result')) %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"><span><%= t(:'payments.transaction_result') %></span></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-3 d-none d-sm-block"></div>
          <div class="col-md-6 col-xs-12">
            <ul class="list-group">
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.invoice_number') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= invoice_number %></h4></div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.invoice_date') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= invoice_date %></h4></div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.amount') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= amount %></h4></div>
                </div>
              </li>

            </ul>
          </div>
          <div class="col-md-3 text-center">
            <%= image_tag('pep_logo.gif') %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 d-none d-sm-block"></div>
          <div class="col-md-6 col-xs-12">
            <% if success %>
              <div class="alert alert-info payment">
                <strong><i class="fa fa-check-circle fa-lg"></i> <%= message %></strong>
                <hr/>
                <strong><%= "#{t(:'payments.track_code')}: #{track_code}" %></strong>
                <%= link_to('بازگشت', "#{back_url}?slug=#{slug}", class: 'btn btn-primary') %>
              </div>
            <% else %>
              <div class="alert alert-danger payment">
                <strong><i class="fa fa-exclamation-circle fa-lg"></i> <%= message %></strong>
                <hr/>
                <strong><%= "#{t(:'payments.error')}: #{error}" %></strong>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
