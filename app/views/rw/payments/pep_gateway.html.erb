<% title(t(:'payments.pep_title')) %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"><span><%= t(:'payments.pep_title') %></span></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-3 d-none d-sm-block"></div>
          <div class="col-md-6 col-xs-12">
            <ul class="list-group">
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.invoice_number') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= invoice_number %></h4></div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.invoice_date') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= invoice_date %></h4></div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.amount') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= amount %></h4></div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.checkout_account') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= checkout_account %></h4></div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.mobile') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= mobile %></h4></div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6"><h4><%= t(:'payments.email') %></h4></div>
                  <div class="col-xs-6"><h4 style="float: left"><%= email %></h4></div>
                </div>
              </li>
            </ul>
          </div>
          <div class="col-md-3 text-center">
            <%= image_tag('pep_logo.gif') %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3"></div>
          <div class="col-xs-6 text-center">
            <%= simple_form_for(:gateway, url: rw.to_pep_gateway_path) do |f| %>
              <%= f.input(:invoice_number, label: false, as: :hidden, input_html: {value: invoice_number}) %>
              <%= f.input(:invoice_date, label: false, as: :hidden, input_html: {value: invoice_date}) %>
              <%= f.input(:amount, label: false, as: :hidden, input_html: {value: amount}) %>
              <%= f.input(:mobile, label: false, as: :hidden, input_html: {value: mobile}) %>
              <%= f.input(:email, label: false, as: :hidden, input_html: {value: email}) %>
              <%= f.input(:multi_payment_encoded64, label: false, as: :hidden, input_html: {value: multi_payment_encoded64}) %>
              <%= f.button :submit, t(:'payments.pay'), class: 'btn btn-primary btn-lg' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
